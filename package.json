{
  "name": "phantasma-js-hw",
  "description": "phantasma javascript hawrdware wallet library",
  "version": "1.0.0",
  "module": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coranos/phantasma-js-hw"
  },
  "scripts": {
    "browserify": "npm run browserify-TransportWebUSB && npm run browserify-tiny-secp256k1 && npm run browserify-bip32 && npm run browserify-bip39 && npm run browserify-phantasma-js-hw",
    "browserify-TransportWebUSB": "browserify browserify/TransportWebUSB.js -o dist/TransportWebUSB.js",
    "browserify-bip32": "browserify browserify/bip32.js -o dist/bip32.js",
    "browserify-bip39": "browserify browserify/bip39.js -o dist/bip39.js",
    "browserify-tiny-secp256k1": "browserify browserify/tiny-secp256k1.js -o dist/tiny-secp256k1.js",
    "browserify-phantasma-js-hw": "browserify -d browserify/phantasma-js-hw.js -o dist/phantasma-js-hw.js",
    "itest": "./node_modules/mocha/bin/mocha.js -t 100000 test/integration",
    "test": "./node_modules/mocha/bin/mocha.js -t 100000 test/unit",
    "coverage": "nyc -x 'test/util/**' -x 'test/unit/**' ./node_modules/mocha/bin/mocha.js -t 100000 test/unit",
    "eslint": "eslint --fix '**/*.js'",
    "npm-check-updates": "npm-check-updates --target minor -u",
    "preflight": "npm update && npm run npm-check-updates && npm i && npm audit fix && npm run eslint && npm run prettier && npm run coverage && npm run browserify && npm outdated",
    "prettier": "prettier \"**/**.{ts,json,css,scss,html}\" --write",
    "start": "node main.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ledgerhq/hw-transport-node-hid": "^6.27.1",
    "babel-polyfill": "^6.26.0",
    "bip32": "^3.0.1",
    "bip39": "^3.0.4",
    "bs58": "^5.0.0",
    "phantasma-ts": "^0.1.5",
    "tiny-secp256k1": "^2.2.1"
  },
  "devDependencies": {
    "@ledgerhq/hw-transport-webusb": "^6.27.1",
    "browserify": "^17.0.0",
    "chai": "^4.3.6",
    "elliptic": "^6.5.4",
    "eslint": "^8.16.0",
    "eslint-config-google": "^0.14.0",
    "mocha": "^10.0.0",
    "npm-check-updates": "^13.0.3",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2"
  }
}
